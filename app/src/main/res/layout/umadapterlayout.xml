<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_show_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:paddingRight="10dp"
    android:elevation="100dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/image_layout_show_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view_show_card"
                    android:layout_width="match_parent"
                    android:scaleType="centerInside"
                    android:layout_height="match_parent" />

            </FrameLayout>
            <ImageButton
                android:id="@+id/image_button_fav_show_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/favourites"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:tint="@android:color/darker_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_title_show_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/audiowide"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                style="@style/TextAppearance.AppCompat.Subhead" />

            <RatingBar
            android:id="@+id/rating_show_card"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
                android:layout_below="@+id/text_view_title_show_card"
            android:layout_gravity="start"
            android:layout_margin="4dp" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>